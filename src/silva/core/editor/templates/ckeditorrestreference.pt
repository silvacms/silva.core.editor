<div class="reference-widget" id="{id|html-attr-value}"
     i18n:domain="silva">
     <a class="open-screen reference-dialog-edit-link" rel="content"
        title="Edit content" style="display: none"
        id="{id|html-attr-value}-edit-link" href="#"
        i18n:attributes="title">
     </a>
     <a class="reference-dialog-content" target="_blank" id="{id|html-attr-value}-link"></a>
     <br clear="both" />
     <a class="reference-dialog-trigger cke_dialog_ui_button"
        title="Lookup a content in Silva"
        i18n:attributes="title">
       <span class="cke_dialog_ui_button"
             i18n:translate="">Lookup</span>
     </a>
     <br clear="both" />
     <input type="hidden" value=""
            id="{id|html-attr-value}-value"
            name="{id|html-attr-value}_value" />
     {.section content}
     <input type="hidden" value="{content|html-attr-value}" id="{id|html-attr-value}-interface" />
     {.end}
     <input type="hidden" value="#"
            id="{id|html-attr-value}-base"
            tal:attributes="value string:${rest/container_url}"/>
</div>
