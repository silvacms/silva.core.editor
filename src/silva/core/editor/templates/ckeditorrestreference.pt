<div class="reference-widget" id="{id|html-attr-value}"
     i18n:domain="silva">
     <div id="{id|html-attr-value}-dialog" title="select link reference" class="reference-dialog"
          i18n:attributes="title">
       <ul class="reference-dialog-data">
       </ul>
     </div>
     <button class="reference-dialog-trigger"
             title="Lookup a content in Silva"
             i18n:attributes="title">
     </button>
     <a target="_blank" id="{id|html-attr-value}-link"></a>
     <a class="kupu-reference-edit-link" target="_blank" id="{id|html-attr-value}-edit-link"
        title="Edit content"
        i18n:attributes="title">
       <img src="#" alt="Edit content"
            tal:attributes="src string:${rest/root_url}/++resource++Products.Silva/edit.png"
            i18n:attributes="alt" />
     </a>
     <input type="hidden" value=""
            id="{id|html-attr-value}-value"
            name="{id|html-attr-value}_value" />
     {.section content}
     <input type="hidden" value="{content|html-attr-value}" id="{id|html-attr-value}-interface" />
     {.end}
     <input type="hidden" value="#"
            id="{id|html-attr-value}-base"
            tal:attributes="value string:${rest/container_url}"/>
</div>
