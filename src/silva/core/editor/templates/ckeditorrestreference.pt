<div class="reference-widget" id="{id|html-attr-value}"
     i18n:domain="silva">
     <div id="{id|html-attr-value}-dialog"
          title="select link reference"
          class="ui-widget reference-dialog"
          style="display:none"
          i18n:attributes="title">
       <div class="content-list-actions">
         <div class="content-list-action content-list-action-refresh">
           <button name="refresh"
                   title="Refresh content listing"
                   i18n:attributes="title"
                   i18n:translate="">
             refresh
           </button>
         </div>
         <div class="content-list-action content-list-action-add">
           <select disabled="disabled">
             <option value="" i18n:translate="">select:</option>
           </select>
           <button name="add"
                   title="Add a new content in Silva to refer it"
                   i18n:attributes="title"
                   i18n:translate="">
             add
           </button>
         </div>
       </div>
       <div class="path-list"></div>
       <table class="content-list source-list">
       </table>
       <table class="content-list selection-list">
       </table>
     </div>
     <button class="reference-dialog-trigger"
             title="Lookup a content in Silva"
             i18n:attributes="title">
     </button>
     <a class="reference-dialog-edit-link" target="_blank"
        title="Edit content"
        id="{id|html-attr-value}-edit-link"
        i18n:attributes="title">
     </a>
     <a target="_blank" id="{id|html-attr-value}-link"></a>
     <input type="hidden" value=""
            id="{id|html-attr-value}-value"
            name="{id|html-attr-value}_value" />
     {.section content}
     <input type="hidden" value="{content|html-attr-value}" id="{id|html-attr-value}-interface" />
     {.end}
     <input type="hidden" value="#"
            id="{id|html-attr-value}-base"
            tal:attributes="value string:${rest/container_url}"/>
</div>
